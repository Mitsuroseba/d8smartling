    $this->assertTrue(($node_translated->field_translatable_data['ru'][0]['value'] != 'Translatable data field text'), t('Translated node has translated content in RU for field_translatable_data field'), t('Browser'));
    $this->assertTrue(($node_translated->field_not_translatable_data['en'][0]['value'] == 'Not translatable data field text'), t('Translated node has original content for field_not_translatable_data'), t('Browser'));
  }

}
