    foreach ($node->target as $locale) {
      if ($locale !== 0 && $locale !== $node->language) {
        $locales['translate_to'][$locale] = FALSE;
      }
    }

    $smartling_data->locale_name = serialize($locales);
    smartling_entity_data_save($smartling_data);
  }
}

