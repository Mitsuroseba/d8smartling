/**
 * Implements hook_cron().
 */
function smartling_cron() {
  $check_queue = db_select('smartling_entity_data', 'sed')
    ->fields('sed', array(
      'eid',
      'rid',
      'entity_type',
      'bundle',
      'file_name',
      'target_language',
      'status',
    ))
    ->condition('sed.progress', 100, '<>')
    ->condition('sed.target_language', 'original', '<>')
    ->execute()
    ->fetchAll();

  if (!empty($check_queue)) {
    $log = new SmartlingLog();
    $smartling_queue = DrupalQueue::get('smartling_check_status');
    $smartling_queue->createQueue();
    foreach ($check_queue as $queue_item) {
      if (!empty($queue_item->file_name)) {
        $obj = new stdClass();
        $obj->eid = $queue_item->eid;
        $obj->rid = $queue_item->rid;
        $obj->entity_type = $queue_item->entity_type;
        $obj->bundle = $queue_item->bundle;
        $obj->d_locale = $queue_item->target_language;

        $smartling_queue->createItem($obj);
        $log->setMessage('Add item to "smartling_check_status" queue. Smartling entity data id - @eid, related entity id - @rid, entity type - @entity_type')
          ->setVariables(array(
            '@eid' => $queue_item->eid,
            '@rid' => $queue_item->rid,
            '@entity_type' => $queue_item->entity_type,
          ))
          ->execute();
        unset($obj);
      }
      else {
        if ($queue_item->status != 0) {
          $log->setMessage('Original file name is empty. Smartling entity data id - @eid, related entity id - @rid, entity type - @entity_type')
            ->setVariables(array(
              '@eid' => $queue_item->eid,
              '@rid' => $queue_item->rid,
              '@entity_type' => $queue_item->entity_type,
            ))
            ->setSeverity(WATCHDOG_WARNING)
            ->execute();
        }
      }
    }
  }
}

